ORG 0000H

RS  EQU P2.5
RW  EQU P2.6
E   EQU P2.7
MOV P1, #00H
MOV P2, #00H
CALL LCD_INIT
CALL LCD_DELAY_LONG
MOV DPTR, #MSG1
CALL LCD_SEND_STRING
MOV A, #0C0H  
CALL LCD_CMD  
MOV DPTR, #MSG2
CALL LCD_SEND_STRING
HERE: SJMP HERE
LCD_INIT:
MOV A, #38H
CALL LCD_CMD
CALL LCD_DELAY_LONG
MOV A, #0CH
CALL LCD_CMD
MOV A, #01H
CALL LCD_CMD
CALL LCD_DELAY_LONG
MOV A, #06H
CALL LCD_CMD
RET
LCD_CMD:
CLR RS
CLR RW
MOV P1, A
SETB E
ACALL LCD_DELAY
CLR E
ACALL LCD_DELAY
RET
LCD_DATA_WRITE:
SETB RS
CLR RW
MOV P1, A
SETB E
ACALL LCD_DELAY
CLR E
ACALL LCD_DELAY
RET
LCD_SEND_STRING:
CLR A
MOVC A, @A+DPTR
JZ END_STR
CALL LCD_DATA_WRITE
INC DPTR
SJMP LCD_SEND_STRING
END_STR:
RET

LCD_DELAY:
MOV R3, #250
DELAY_LOOP:
DJNZ R3, DELAY_LOOP
RET
LCD_DELAY_LONG:
MOV R2, #10
LONG_DELAY_LOOP:
ACALL LCD_DELAY
DJNZ R2, LONG_DELAY_LOOP
RET
MSG1: DB "hemant kumar", 0
MSG2: DB "12324886", 0
END
